{
  "name": "brevly",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --env-file .env src/index.ts",
    "build": "tsup src --format esm --loader .sql=text",
    "start": "node dist/index.mjs",
    "lint": "biome lint",
    "test": "dotenv -e .env.test -- vitest run",
    "test:watch": "dotenv -e .env.test -- vitest",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:migrate:test": "dotenv -e .env.test -- drizzle-kit migrate",
    "pretest": "yarn db:migrate:test",
    "pretest:watch": "yarn db:migrate:test"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.803.0",
    "@aws-sdk/lib-storage": "^3.803.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/swagger": "^9.4.2",
    "@fastify/swagger-ui": "^5.2.2",
    "csv-stringify": "^6.5.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.41.0",
    "fastify": "^5.2.2",
    "pg": "^8.15.6",
    "pg-query-stream": "^4.9.6",
    "postgres": "^3.4.5",
    "uuidv7": "^1.0.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@faker-js/faker": "^9.7.0",
    "@types/node": "^22.13.14",
    "@types/pg": "^8.12.0",
    "csv-parser": "^3.2.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-kit": "^0.30.6",
    "node-fetch": "^3.3.2",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  }
}
